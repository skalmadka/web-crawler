extends layout

block content
  ul.nav.nav-tabs
    li(role='features')
      a(href='/') Search
    li.active(role='features')
      a(href='/url_feeder') URL Feeder
    li(role='features')
      a(href='/voice_search') Voice Search

  h1(align='left') URL Feeder
  form(align="center",method='POST', action='/api/event')
    .form-group.col-md-5
      input.form-control(type='text', name='uri', placeholder='URL')
      br
      input.form-control(type='text', name='userid', placeholder='Unity ID')
      br
      button.btn.btn-primary.btn-sm(type='submit', name='submit', value='FeedIt') Feed It!

